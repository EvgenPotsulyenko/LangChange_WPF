             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_multiLang.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Content="{DynamicResource btn_Text}" Click="Button_Click"></Button>
        <Button Content="{DynamicResource btn_But}" Width="265"/>
        <Label Content="{DynamicResource btn_Lab}"/>
    </StackPanel>
</UserControl>
